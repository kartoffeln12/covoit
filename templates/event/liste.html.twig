{% extends 'base.html.twig' %}

{% block title %}Covoiturage / {{ EventName }} {% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<a href="{{ link}}"><button class="reverse-button">Se déclarer participant</button></a>
<div class="main-content">
    <h1>Liste des participants à l'événement:<br/>{{ EventName }}</h1>
    <div class="table-content">

        <table class="table">
            <thead>
            <tr>
                <th>Nom</th>
                <th>Email</th>
                <th>Téléphone</th>
                <th>Département</th>
                <th>Ville</th>
                <th>Lieu</th>
                <th>Conducteur/Passager</th>
            </tr>
            </thead>
            <tbody>
            {% for participant in participants %}
                <tr>
                    <td>{{ participant.nom }}</td>
                    <td>{{ participant.mail }}</td>
                    <td>{{ participant.phone }}</td>
                    <td>{{ participant.departement }}</td>
                    <td>{{ participant.ville }}</td>
                    <td>{{ participant.lieu }}</td>
                    <td>
                        {% if participant.passager() and  participant.conducteur %}
                            Les deux
                        {% elseif participant.conducteur %}
                            Conducteur
                        {% else %}
                            Passager
                        {% endif %}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="7">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}